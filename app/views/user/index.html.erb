<h1>List of users</h1>

<% if !@users.blank? %>
  <ul id="user_list">
    <% for user in @users %>
    <li><%= user.name %></li>
    <% end %>
  </ul>
<% else %>
<p>empty list</p>
<% end %>

<h2>Add new user</h2>

<%= form_tag({controller: "user", action: "new"}, remote: true, id: 'new_user')do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= label_tag :name, "Name" %>:
      <%= text_field_tag :name, nil, class: 'form-control' %>
      <p class="help-block"></p>
    </div>

    <div class="form-group">
      <%= label_tag :status, "Status" %>:
      <%= text_field_tag :status, nil, class: 'form-control' %>
      <p class="help-block"></p>
    </div>

    <div class="form-group">
      <%= select("role","role_id", @roles, { include_blank: true }, class: 'form-control') %>
      <p class="help-block"></p>
    </div>
  </div>
</div>

<%= submit_tag("Save", class: 'btn btn-primary') %>
<% end %>